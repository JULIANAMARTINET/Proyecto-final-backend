
<div class="d-flex flex-column align-items-center">

  <div class="d-flex flex-row flex-wrap justify-content-center m-2">

      <div class="card product m-2">
        <div class="card-body d-flex flex-column items-center">
          <h4 class="card-title text-center border-bottom fs-3">
            {{product.title}}
            <a href="/api/products/{{product._id}}"><i class="fas fa-edit"></i></a>
          </h4>
          <div class="d-flex justify-content-between px-4 ">
            <td><img
                width="100"
                src={{product.thumbnail}}
                alt="image"
                class="rounded-3"
              /></td>
            <div>
              <p>{{product.description}} </p>
              <p>${{product.price}}</p>
              <p>stock: {{product.stock}}</p>
            </div>
          </div>
          <div class="d-flex">
            <div>
              <button onclick="location.href='/modificarProducto/{{product._id}}'"
                class="btn btn-primary btn-block btn-sm"
                type="submit"
              >Modificar Producto</button>
              </div>
   
            <form action="/api/cart/{{product._id}}" method="POST">
              <button
                class="btn btn-primary btn-block btn-sm"
                type="submit"
              >Agregar a Compras</button>
            </form>
            <!-- DELETE REQUEST -->
            <form
              action="/api/products/{{product._id}}?_method=DELETE"
              method="POST"
            >
              <input type="hidden" name="_method" value="DELETE" />
              <button
                type="submit"
                class="btn btn-danger btn-block btn-sm"
              >Eliminar</button>
            </form>
          </div>
        </div>
      </div>
  </div>
</div>
<div class="d-flex flex-row justify-content-center w-100 px-5">

  <button class="btn btn btn-primary" onclick="location.href='/productos'">Ver Todos los Productos</button>
</div>