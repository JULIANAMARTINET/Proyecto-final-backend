<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header bg-dark text-center">
      <h3 class="text-white">New Product</h3>
    </div>
    <div class="card-body text-right">
      <form action="/api/products" method="POST">
        <div class="mb-3">
          <label for="title">Title:</label>
          <input
            type="text"
            name="title"
            class="form-control"
            placeholder="Title"
            autofocus
          />
        </div>
        <div class="mb-3">
          <label for="code">Code:</label>
          <textarea
            name="code"
            class="form-control"
            placeholder="Code"
          ></textarea>
        </div>
        <div class="mb-3">
          <label for="thumbnail">thumbnail:</label>
          <textarea
            name="thumbnail"
            class="form-control"
            placeholder="thumbnail"
          ></textarea>
        </div>
        <div class="mb-3">
          <label for="description">Description:</label>
          <textarea
            name="description"
            class="form-control"
            placeholder="Description"
          ></textarea>
        </div>
        <div class="mb-3">
          <label for="price">Price:</label>
          <textarea
            name="price"
            class="form-control"
            placeholder="Price"
          ></textarea>
        </div>
        <div class="mb-3">
          <label for="stock">Stock:</label>
          <textarea
            name="stock"
            class="form-control"
            placeholder="Stock"
          ></textarea>
        </div>
        <button class="btn btn-primary w-100" type="submit">
          Save
        </button>
      </form>
    </div>
  </div>
</div>