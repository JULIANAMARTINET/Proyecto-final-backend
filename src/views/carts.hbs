<div class="d-flex flex-row justify-content-between w-100 px-5">

  <button
    class="btn btn btn-primary"
    onclick="location.href='/productos'"
  >Seguir comprando</button>
  <h3>Carrito de compras</h3>
  <button
    class="btn btn btn-danger"
    onclick="location.href='/checkout'"
  >Pagar</button>
</div>
<div class="d-flex flex-column align-items-center">
  {{#each cartProducts}}
    <div class="card carrito m-2">
      <div class="card-body p-2">
        <h4 class="card-title text-center border-bottom">
          {{this.product.title}}
          <a href="/api/products/{{this._id}}"><i class="fas fa-edit"></i></a>
        </h4>
        <div class="d-flex justify-content-between px-4">
          <td><img width="100" src={{this.product.thumbnail}} alt="image" /></td>
          <div>
            <p>{{this.product.description}} </p>
            <p>cant:  {{this.quantity}} </p>
            <p>precio U ${{this.product.price}}</p>
          </div>
          <div class="d-flex">
            <!-- DELETE REQUEST -->
            <form action="/api/cart/{{this._id}}?_method=DELETE" method="POST">
              <input type="hidden" name="_method" value="DELETE" />
              <button
                type="submit"
                class="btn btn-danger btn-block btn-sm"
              >Eliminar</button>
            </form>
          </div>
        </div>
      </div>
    </div>

  {{else}}
    <div class="card mx-auto">
      <div class="card-body">
        <p clsss="lead">Carrito de compras vac√≠o.</p>
      </div>
    </div>
  {{/each}}
 

</div>